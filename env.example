# =====================================================
# CONFIGURATION SINGPAY
# =====================================================

# Configuration SingPay
SINGPAY_BASE_URL=https://gateway.singpay.ga
SINGPAY_CLIENT_ID=your_client_id_here
SINGPAY_CLIENT_SECRET=your_client_secret_here
SINGPAY_DEFAULT_WALLET_ID=your_wallet_id_here
SINGPAY_ENVIRONMENT=sandbox

# URLs de redirection pour les paiements
FRONTEND_URL=http://localhost:3000

# =====================================================
# CONFIGURATION BASE DE DONNÉES
# =====================================================

DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_PORT=3306

# =====================================================
# CONFIGURATION JWT
# =====================================================

JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# =====================================================
# CONFIGURATION SERVEUR
# =====================================================

PORT=5000
NODE_ENV=development

# =====================================================
# CONFIGURATION EMAIL (optionnel)
# =====================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# =====================================================
# CONFIGURATION UPLOAD
# =====================================================

UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# =====================================================
# CONFIGURATION SÉCURITÉ
# =====================================================

CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# INSTRUCTIONS DE CONFIGURATION
# =====================================================

# 1. Copiez ce fichier vers .env
# 2. Remplissez les valeurs avec vos informations SingPay
# 3. Configurez votre base de données
# 4. Définissez vos clés JWT
# 5. Ajustez les URLs selon votre environnement

# Pour obtenir vos identifiants SingPay :
# - Connectez-vous à https://workspace.singpay.ga
# - Créez un portefeuille
# - Récupérez le Client ID et Client Secret
# - Notez le Wallet ID du portefeuille
