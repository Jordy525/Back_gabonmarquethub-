# Configuration de la base de données
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=gabmarkethub
DB_PORT=3306

# Configuration JWT
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# Configuration serveur
PORT=3000
NODE_ENV=development

# Configuration WebSocket/Socket.IO
WS_PORT=3000
WS_CORS_ORIGIN=http://localhost:5173,http://localhost:3000
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_ATTEMPTS=5

# Configuration upload et fichiers
UPLOAD_PATH=./uploads
UPLOAD_MESSAGES_PATH=./uploads/messages
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/zip,application/x-rar-compressed

# Configuration rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_MESSAGE_MAX=100

# Configuration cache
CACHE_TTL=300000
CACHE_MAX_SIZE=200

# Configuration logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuration email (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FRONTEND_URL=http://localhost:5173

# Configuration notifications
NOTIFICATION_ENABLED=true
NOTIFICATION_SOUND=true

# Configuration sécurité
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
HELMET_ENABLED=true
TRUST_PROXY=false