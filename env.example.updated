# Configuration de l'environnement - Backend (Node.js)
# Copiez ce fichier vers .env et configurez vos valeurs

# =====================================================
# CONFIGURATION SERVEUR
# =====================================================

# Port du serveur
PORT=3000

# Host du serveur
HOST=localhost

# URL de base de l'API
API_BASE_URL=http://localhost:3000

# =====================================================
# CONFIGURATION BASE DE DONNÉES
# =====================================================

# Configuration MySQL/MariaDB
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gabon_trade_hub
DB_USER=root
DB_PASSWORD=

# =====================================================
# CONFIGURATION FRONTEND
# =====================================================

# URL du frontend principal
FRONTEND_URL=http://localhost:5173

# URL de l'interface admin
ADMIN_URL=http://localhost:8080

# URLs autorisées pour CORS (séparées par des virgules)
CORS_ORIGIN=http://localhost:5173,http://localhost:8080,http://localhost:3000

# =====================================================
# CONFIGURATION IMAGES
# =====================================================

# URL de base pour les images
IMAGE_BASE_URL=http://localhost:3000

# =====================================================
# CONFIGURATION SOCKET.IO
# =====================================================

# Configuration WebSocket/Socket.IO
WS_PORT=3000
WS_CORS_ORIGIN=http://localhost:5173,http://localhost:8080,http://localhost:3000
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_ATTEMPTS=5

# =====================================================
# CONFIGURATION JWT
# =====================================================

# Clé secrète pour JWT
JWT_SECRET=votre_cle_secrete_jwt_tres_longue_et_complexe

# Durée de vie du token JWT (en secondes)
JWT_EXPIRES_IN=24h

# =====================================================
# CONFIGURATION EMAIL
# =====================================================

# Configuration SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre_email@gmail.com
SMTP_PASS=votre_mot_de_passe_application_gmail

# URLs de redirection pour les emails
EMAIL_VERIFICATION_URL=http://localhost:5173/verify-email
PASSWORD_RESET_URL=http://localhost:5173/reset-password

# =====================================================
# CONFIGURATION SÉCURITÉ
# =====================================================

# Configuration Helmet
HELMET_ENABLED=true
TRUST_PROXY=false

# Configuration Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CONFIGURATION NOTIFICATIONS
# =====================================================

# Configuration des notifications
NOTIFICATIONS_ENABLED=true
NOTIFICATION_POLLING_INTERVAL=30000

# =====================================================
# CONFIGURATION PRODUCTION
# =====================================================

# Pour la production, remplacez les URLs localhost par vos domaines réels
# FRONTEND_URL=https://votre-domaine.com
# ADMIN_URL=https://admin.votre-domaine.com
# API_BASE_URL=https://api.votre-domaine.com
# IMAGE_BASE_URL=https://api.votre-domaine.com
# CORS_ORIGIN=https://votre-domaine.com,https://admin.votre-domaine.com
